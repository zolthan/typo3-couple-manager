<T3DataStructure>
    <sheets>
        <!--
            ################################
              SHEET General Settings
            ################################
        -->
        <main>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- View -->
                    <switchableControllerActions>
                        <TCEforms>
                            <label>
                                LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode
                            </label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>

                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:pleaseChoose</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">
                                            LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode.couple_list
                                        </numIndex>
                                        <numIndex index="1">Couple->list</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">
                                            LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode.couple_list_simple
                                        </numIndex>
                                        <numIndex index="1">Couple->listSimple;Couple->detail</numIndex>
                                    </numIndex>
                                    <numIndex index="11">
                                        <numIndex index="0">
                                            LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode.couple_detail
                                        </numIndex>
                                        <numIndex index="1">Couple->detail</numIndex>
                                    </numIndex>
                                    <numIndex index="21">
                                        <numIndex index="0">
                                            LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode.competition_list
                                        </numIndex>
                                        <numIndex index="1">Competition->list</numIndex>
                                    </numIndex>
                                    <numIndex index="31">
                                        <numIndex index="0">
                                            LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.mode.result_list
                                        </numIndex>
                                        <numIndex index="1">Result->list</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                </el>
            </ROOT>
        </main>

        <list>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.list</sheetTitle>
                    <displayCond><![CDATA[FIELD:main.switchableControllerActions:=:Couple->list]]></displayCond>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- activeCouplesFirst -->
                    <settings.list.activeCouplesFirst>
                        <TCEforms>
                            <label>LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.list.active_couples_first</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.list.activeCouplesFirst>

                    <settings.list.detailView>
                        <TCEforms>
                            <label>LLL:EXT:couple_manager/Resources/Private/Language/locallang_be.xlf:flexforms_tab.list.select_detail_view</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.list.detailView>
                </el>
            </ROOT>
        </list>

    </sheets>
</T3DataStructure>